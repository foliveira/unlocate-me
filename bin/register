#!/usr/bin/env node

'use strict'

var program = require('commander')
var metadata = require('../package')
var unlocator = require('../src/unlocator')

program
  .version(metadata.version)
  .parse(process.argv)

unlocator.register(function(err, apikey) {
  if(err) {
    console.error(err)
  } else {
    console.log('Your API key is: %s', apikey)
    _warnDNS()
  }
})

function _warnDNS() {
  console.log('If you haven\'t, please update your ' +
                'connection DNS servers to: %s and %s',
                unlocator.dns[0],
                unlocator.dns[1])
}
